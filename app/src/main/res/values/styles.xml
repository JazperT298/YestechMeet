<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey_800</item>
        <item name="colorPrimaryDark">@color/grey_900</item>
        <item name="colorAccent">@color/colorGrey</item>
    </style>
    <style name="MenuStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/footerBackground</item>
    </style>

    <!--Splash Screen-->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>
</resources>
